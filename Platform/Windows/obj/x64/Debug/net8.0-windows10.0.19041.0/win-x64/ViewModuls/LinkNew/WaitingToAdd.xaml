<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="DevicesInterconnection.ViewModuls.LinkNew.WaitingToAdd"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DevicesInterconnection.ViewModuls.LinkNew"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="22"
                   FontWeight="Bold"
                   Text="这些设备想要与你的设备互联"/>
        <InfoBar
            IsOpen="True"
            Grid.Row="1"
            Severity="Warning"
            IsClosable="False"
            Title="请注意："
            Message="请根据下面展示出来的设备信息以及配对码来确认配对设备，请仔细甄别这是不是你要添加的设备，
不要添加陌生设备，注意保护你的数据安全！"/>
        <ItemsView x:ConnectionId='2'
            Grid.Row="2"
                                                                 
            SelectionMode="Single">
            <ItemsView.ItemTemplate>
                <DataTemplate                                         >
                    <ItemContainer x:ConnectionId='4'>
                        <Grid Width="250" Background="{StaticResource LayerOnMicaBaseAltFillColorSecondary}"
                              BorderBrush="Black">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="200"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock x:ConnectionId='5' FontSize="18"
                                       Grid.Row="1"
                                                           
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:ConnectionId='6'                    
                                       Grid.Row="2"
                                       HorizontalAlignment="Center"/>
                            <Button Grid.Row="3"
                                    Content="详细信息"
                                    HorizontalAlignment="Center"
                                    Background="Transparent"
                                    Foreground="{ThemeResource AccentAAFillColorSecondaryBrush}"
                                    BorderBrush="Transparent">
                                <Button.Flyout>
                                    <Flyout ShowMode="Standard" x:Name="FLy">
                                        <Grid ColumnSpacing="2" RowSpacing="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="设备详细信息"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"
                                                       Grid.ColumnSpan="2"/>

                                            <TextBlock Text="设备名称：" Grid.Row="1"/>
                                            <TextBlock Text="设备配对码：" Grid.Row="2"/>
                                            <TextBlock Text="设备类型：" Grid.Row="3"/>
                                            <TextBlock Text="开始请求时间：" Grid.Row="4"/>
                                            <TextBlock Text="品牌：" Grid.Row="5"/>
                                            <TextBlock Text="操作系统：" Grid.Row="6"/>

                                            <TextBlock x:ConnectionId='8'                      Grid.Column="1" Grid.Row="1"/>
                                            <TextBlock x:ConnectionId='9'                     Grid.Column="1" Grid.Row="2"/>
                                            <TextBlock x:ConnectionId='10'                            Grid.Column="1" Grid.Row="3"/>
                                            <TextBlock x:ConnectionId='11'                          Grid.Column="1" Grid.Row="4"/>
                                            <TextBlock x:ConnectionId='12'                       Grid.Column="1" Grid.Row="5"/>
                                            <TextBlock x:ConnectionId='13'                    Grid.Column="1" Grid.Row="6"/>
                                            
                                            <Button Content="确定" Grid.Row="7"/>
                                                
                                            <Button Style="{ThemeResource AccentButtonStyle}"
                                                    Content="确认配对"
                                                    Grid.Row="7"
                                                    Grid.Column="1"/>
                                        </Grid>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </Grid>
                    </ItemContainer>
                </DataTemplate>
            </ItemsView.ItemTemplate>
            <ItemsView.Layout>
                <LinedFlowLayout ItemsStretch="Fill" LineHeight="330" LineSpacing="5" MinItemSpacing="5"/>
            </ItemsView.Layout>
        </ItemsView>
    </Grid>
</Page>

